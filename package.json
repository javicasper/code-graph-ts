{
  "name": "code-graph-ts",
  "version": "1.0.0",
  "description": "MCP server + CLI that indexes source code into a Neo4j graph for AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "codegraph": "dist/adapters/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/adapters/cli/index.js",
    "mcp": "node dist/adapters/cli/index.js mcp start",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.3",
    "neo4j-driver": "^5.28.1",
    "tree-sitter": "^0.22.4",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-php": "^0.23.11",
    "tree-sitter-typescript": "^0.23.2"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "mcp",
    "neo4j",
    "code-graph",
    "ast",
    "tree-sitter"
  ],
  "license": "MIT"
}
